{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib/",
    "lib": ["ESNext", "DOM"],
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2019",
    "skipLibCheck": true,
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "exclude": ["node_modules"],
  "include": ["src/index.ts", "test.ts"]
}
